<div class="user-container">
  <h1> <%= @user.name %> </h1>

  <% if @user.favorites %>
    <% @user.favorites.each do |favorite| %>
      <p> <%= link_to favorite.tvshow.name, favorite.tvshow %> </p>
    <% end %>
  <% end %> 

  <%= link_to "Edit User", edit_user_path(@user) %>
  <p> <%= button_to 'Delete this user', user_path(@user),
              data: {:confirm => 'Are you sure?'}, :method => :delete %>
  </p>
</div>